{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "lerna exec -- yarn && lerna run prepare",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "type-check": "lerna run typecheck",
    "predeploy": "yarn && yarn clean && yarn build && yarn lint && yarn test",
    "deploy": "lerna publish -m \"chore: Publish\"",
    "deploy:next": "yarn deploy --canary --preid next",
    "watch": "trap \"kill 0\" SIGINT; for f in `ls packages`; do (cd `pwd`/packages/$f && yarn run watch) & done; "
  },
  "devDependencies": {
    "husky": "^2.7.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn format",
      "git add"
    ]
  }
}